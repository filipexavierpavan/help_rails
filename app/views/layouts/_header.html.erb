<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "help app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to glyph("home") + ' Home', root_path %></li>
        <% if logged_in? %>
          <li><%= link_to glyph("th-list") + ' Usuários', users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to glyph("user") + ' ' + current_user.name + ' (Perfil)', edit_user_path(current_user) %></li>
              <li><%= link_to glyph("cog") + ' Configuração', '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to glyph("log-out") + ' Sair', logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to glyph("log-in") + ' Logar', login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>